		for(int i=0;i<15;i++){
			for(int j=0;j<15;j++){
				
			}
		}
		// make a decision on the play here
		// use board.getSqContents to check what is on the board
		// use Board.SQ_VALUE to check the multipliers
		// use frame.getAllTiles to check what letters you have
